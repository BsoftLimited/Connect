        "fluent-ffmpeg": "^2.1.3",
        "react": "^19.1.1",
        "react-router-dom": "^7.7.1",
        "which": "^5.0.0"
    },
    "devDependencies": {
        "bun-types": "latest",
        "@types/fluent-ffmpeg": "^2.1.27"
