generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Credentials{
    id            String        @default(uuid()) @unique
    email         String        @unique
    password      String

    user          User?          
}

model User{
    id            String        @id @unique
    credential   Credentials    @relation(fields: [id], references: [id], onDelete: Cascade)

    email         String        @unique
    username      String
    role          String        @default("user")
    accessLevel   String
}
